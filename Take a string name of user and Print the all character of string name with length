//Take a string name of user and Print the all character of string name with length

import java.util.*;

public class strings {
    public static void main(String args[]) {
        Scanner sc = new Scanner(System.in);
        String fn = sc.nextLine();
        String ln = sc.nextLine();
        String fuN = fn + " " + ln;
        
        for(int i=0; i<fuN.length(); i++) {
            System.out.println(fuN.charAt(i));
        }
        System.out.println();
        System.out.println("Total Length of Name is : " + fuN.length());
    }
}

//Input
//Ajeet
//raj

//Output
//A
//j
//e
//e
//t
 
//r
//a
//j

//Total Length of Name is : 9
